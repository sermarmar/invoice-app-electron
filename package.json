{
  "name": "invoice-app-electron",
  "version": "1.0.0",
  "description": "Gestor de facturas en multiplataforma.",
  "main": "main.js",
  "scripts": {
    "postinstall": "cd backend && npm install",
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^39.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sermarmar/invoice-app-electron.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.invoice.electron",
    "productName": "Invoice App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "frontend/**/*",
      "backend/**/*",
      "!backend/node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/node_modules",
        "to": "backend/node_modules",
        "filter": ["**/*"]
      }
    ],
    "win": {
        "target": ["nsis"],
        "icon": "build/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "build/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "build/icon.png"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
    }
  },  
  "bugs": {
      "url": "https://github.com/sermarmar/invoice-app-electron/issues"
  },
  "homepage": "https://github.com/sermarmar/invoice-app-electron#readme"
  
}
